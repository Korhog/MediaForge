<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MForge.Sequensor.UIControls">

    <Style TargetType="local:SequenceElementControl" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SequenceElementControl">
                    <StackPanel 
                            ManipulationMode="TranslateX"
                            Orientation="Horizontal">
                        
                        <Border Background="Red" Height="35" Width="20" Name="PART_LEFT_BTN"/>
                        <Border
                                Name="Border"
                                HorizontalAlignment="Left"
                                ManipulationMode="TranslateX"                        
                                Width="80"
                                Height="35"
                                Background="Gold"
                                BorderBrush="Goldenrod"
                                BorderThickness="4, 0, 4, 0"/>
                        <Border Background="Red" Height="35" Width="20" Name="PART_RIGHT_BTN"/>
                    </StackPanel>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
