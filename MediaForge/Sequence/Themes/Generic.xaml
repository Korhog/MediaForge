<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sequence.UI">

    <Style TargetType="local:SequenceControl" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SequenceControl">
                    <Border                        
                        MinHeight="100"                        
                        x:Name="Border"
                        Margin="1"
                        AllowDrop="True"
                        Background="#1D1D1D" >
                        <ListView 
                            x:Name="Items" 
                            AllowDrop="True"
                            ReorderMode="Enabled"
                            CanReorderItems="False"
                            Margin="0, -20, 0, 0"
                            HorizontalAlignment="Stretch" >
                            <ListView.ItemContainerStyle>                                
                                <Style TargetType="ListViewItem">
                                    <Setter Property="MinWidth" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>                                            
                                            <ControlTemplate TargetType="ListViewItem">                                                
                                                <Border Padding="0, 20,0,0" >
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>                                    
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ContentControl Content="{Binding Template}"/>
                                    </Grid>                                    
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ItemsPresenter/>
                        </ListView>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    

    <Style TargetType="local:FrameContainer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FrameContainer">
                    <Grid Margin="1, -20, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border HorizontalAlignment="Left" Background="DarkGreen" Padding="2" CornerRadius="2,2,0,0">
                            <TextBlock Text="00:00:05.00" FontSize="11" Foreground="Wheat" FontWeight="Bold"/>
                        </Border>
                        <Border HorizontalAlignment="Right" Background="DarkGreen" Padding="2" CornerRadius="2,2,0,0">
                            <TextBlock Text="00:00:05.00" FontSize="11" Foreground="Wheat" FontWeight="Bold"/>       
                        </Border>  
                        <Border 
                            Grid.Row="1"
                            Background="Green"
                            Padding="4,0,4,0">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </Border>
                    </Grid>  
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
